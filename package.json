{
	"name": "acsd-assistant",
	"version": "3.0.0",
	"description": "A bot for enhancing your ACSD experience.",
	"main": "src/index.ts",
	"module": "src/index.ts",
	"type": "module",
	"scripts": {
		"processStart": "pm2 start . --interpreter bun --name \"ACSD Assistant-2\"",
		"processRestart": "bun stop && bun processStart",
		"start": "bun --env-file=.env.development processStart && pm2 logs",
		"deploy-start": "bun --env-file=.env.development processStart -- -- --deploy && pm2 logs",
		"restart": "bun processRestart && pm2 logs",
		"deploy-restart": "bun processRestart -- -- -- --deploy && pm2 logs",
		"stop": "pm2 delete .",
		"ci:test": "bun run . --nologin"
	},
	"author": "stolarchukboris",
	"license": "MIT",
	"dependencies": {
		"@sapphire/discord.js-utilities": "^7.3.3",
		"@sapphire/framework": "^5.5.0",
		"@sapphire/plugin-subcommands": "^7.0.1",
		"axios": "^1.13.2",
		"discord.js": "^14.25.1",
		"knex": "^3.1.0",
		"ms": "^2.1.3",
		"mysql2": "^3.16.0"
	},
	"devDependencies": {
		"@types/bun": "^1.3.6",
		"@types/ms": "^2.1.0"
	}
}
